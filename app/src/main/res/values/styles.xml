    <style name="AppTheme" parent="AppBaseTheme">
        <!-- 在去头的同时,还保留高版本的样式主题 -->
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!-- API 11 theme customizations can go here. -->
    </style>

    <style name="TitleStyle">
        <!-- 在去头的同时,还保留高版本的样式主题 -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">#8866ff00</item>
        <item name="android:textSize">22sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="nextBtn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:background">@drawable/selector_next_btn_bg</item>
        <item name="android:drawableRight">@mipmap/next</item>
        <item name="android:onClick">nextPage</item>
        <item name="android:text">下一步</item>
    </style>

    <style name="preBtn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:background">@drawable/selector_number_btn_bg</item>
        <item name="android:drawableLeft">@mipmap/previous</item>
        <item name="android:onClick">prePage</item>
        <item name="android:text">上一步</item>
    </style>
</resources>
